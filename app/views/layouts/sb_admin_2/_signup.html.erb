<body class='bg-gradient-<%= options[:colour] %>'>
  <div class='container'>
    <div class='card o-hidden border-0 shadow-lg my-5'>
      <div class='card-body p-0'>
        <!-- Nested Row within Card Body -->
        <div class='row'>
          <div class='col-lg-5 d-none d-lg-block bg-register-<%= resource_name %>'></div>
          <div class='col-lg-7'>
            <div class='p-5'>
              <div class='text-center'>
                <h1 class='h4 text-gray-900 mb-4'>Sign Up as <%= resource_name.capitalize %></h1>
              </div>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'user' }) do |f| %>

                <div class='form-group'>
                  <%= f.email_field :email, required: true, autofocus: true, autocomplete: 'email',
                                    id: 'inputEmail',
                                    class: 'form-control form-control-user',
                                    placeholder: 'Email Address' %>
                </div>

                <div class='form-group row'>
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= f.password_field :password, required: true, autocomplete: 'new-password',
                                         id: 'inputPassword',
                                         class: 'form-control form-control-user',
                                         placeholder: 'Password' %>
                  </div>

                  <div class="col-sm-6">
                    <%= f.password_field :password_confirmation, required: true, autocomplete: 'new-password',
                                         id: 'repeatPassword',
                                         class: 'form-control form-control-user',
                                         placeholder: 'Password Confirmation' %>
                  </div>
                  <hr />

                  <% if @minimum_password_length %>
                    <em class = 'text-right'>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>

                </div>

                <%= f.submit 'Log in', class: "btn btn-#{options[:colour]} btn-user btn-block" %>
                <hr>

                <div class='text-center'>
                  <%= render 'layouts/devise/shared/links' %>
                </div>

              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
