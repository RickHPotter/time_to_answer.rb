<% options ||= {} %>
<% options[:colour] ||= 'primary' %>

<html>
  <body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

      <%= render 'layouts/sb_admin_2/sidebar', options: %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <%= render 'layouts/sb_admin_2/topbar', options:  %>

          <!-- Begin Page Content -->
          <div class="container-fluid">

            <!-- Page Heading -->
            <%= yield %>

          </div>
          <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright &copy; 2023</span>
            </div>
          </div>
        </footer>
        <!-- End of Footer -->

      </div>
      <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%= render 'layouts/sb_admin_2/top_button' %>
    <%= render 'layouts/sb_admin_2/logout_modal', options:  %>

  </body>
