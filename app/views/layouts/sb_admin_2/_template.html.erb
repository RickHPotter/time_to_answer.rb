<% options ||= {} %>
<% options[:colour] ||= 'primary' %>

<%= render 'layouts/sb_admin_2/head', options: %>

<html>
  <body id="page-top" class = "sidebar-toggled">

    <!-- Page Wrapper -->
    <div id="wrapper">

      <%= render 'layouts/sb_admin_2/sidebar', options: %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <%= render 'layouts/sb_admin_2/topbar', options: %>

          <!-- Begin Page Content -->
          <div class="container-fluid">

            <!-- Page Heading -->
            <%= yield %>

          </div>
          <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%= render 'layouts/sb_admin_2/footer' %>

      </div>
      <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%= render 'layouts/sb_admin_2/top_button' %>
    <%= render 'layouts/sb_admin_2/logout_modal', options:  %>

  </body>
</html>
