<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                                                     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">Select "Logout" option below if you are ready to end your current session.</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>

        <% if admin_signed_in? %>
          <%= link_to 'Logout as Admin', destroy_admin_session_path, method: :delete,
                      class: "btn btn-danger" %>
        <% end %>

        <% if user_signed_in? %>
          <%= link_to 'Logout as User', destroy_user_session_path, method: :delete,
                      class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
