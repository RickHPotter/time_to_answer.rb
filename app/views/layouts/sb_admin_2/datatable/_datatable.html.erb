<%= render 'layouts/sb_admin_2/datatable/head' %>

<!-- Page Heading -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-right"><%= options[:title] %></h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <% columns.each_value do |value| %>
              <th><%= value[:label] %></th>
            <% end %>
          </tr>
        </thead>
        <% if options[:tfoot] %>
          <tfoot>
            <tr>
              <% columns.each_value do |value| %>
                <th><%= value[:label] %></th>
              <% end %>
            </tr>
          </tfoot>
        <% end %>
        <tbody>
          <% datum.each do |data| %>
            <tr>
              <% data.each_pair do |key, value| %>
                <% if value.is_a? Time %>
                  <td><%= value.strftime('%Y %B %d %H:%M:%S') %></td>
                <% else %>
                  <td><%= value %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- Page Heading -->
