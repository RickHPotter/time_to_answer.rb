<%= render 'layouts/sb_admin_2/datatable/head' %>

<!-- Page Heading -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-right"><%= options[:title] %></h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <% keys.each do |key| %>
              <th><%= key %></th>
            <% end %>
          </tr>
        </thead>
        <% if options[:tfoot] %>
          <tfoot>
            <tr>
              <% keys.each do |key| %>
                <td><%= key %></td>
              <% end %>
            </tr>
          </tfoot>
        <% end %>
        <tbody>
          <% values.each do |value| %>
            <tr>
              <% keys.each_with_index do |key, index| %>
                <% if value[index].is_a? Time %>
                  <td><%= value[index].strftime('%Y %B %d %H:%M:%S') %></td>
                <% else %>
                  <td><%= value[index] %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- Page Heading -->
